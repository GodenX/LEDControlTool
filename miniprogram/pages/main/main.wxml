<!--miniprogram/pages/main/main.wxml-->
<view class="page">
  <view class="page__bd">
    <view class="weui-cells__title">彩灯总开关</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_switch">
        <view class="weui-cell__bd">彩灯总开关</view>
        <view class="weui-cell__ft">
          <switch checked />
        </view>
      </view>
    </view>
    <view class="weui-cells__title">亮度调整</view>
    <slider show-value value="48" max="48" />
    <view class="weui-cells__title">模式0</view>
    <view class="button-sp-area">
      <button class="weui-btn" type="primary" plain="true" bindtap='onLightning'>照明模式</button>
    </view>
    <view class="weui-cells__title">模式1</view>
    <view class="button-sp-area">
      <button class="weui-btn" type="primary" plain="true" bindtap='onCustomizeDisplay'>自定义显示</button>
    </view>
    <view class="weui-cells__title">模式2</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__bd">
          <input class="weui-input" value="{{username}}" placeholder="请输入需要显示的字符" bindinput='onStrInput' />
        </view>
        <view class="weui-cell__ft">
          <image class="weui-vcode-img" src="../../images/color.jpg" style="height: 40px; width: 50px" bindtap='onSetColor'></image>
        </view>
      </view>
    </view>
    <view class="button-sp-area">
      <button class="weui-btn" type="primary" plain="true" bindtap='onStrSend'>发送字符</button>
    </view>
    <view class="weui-cells__title">模式3</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd weui-cell__hd_in-select-after">
          <view class="weui-label">预设样式</view>
        </view>
        <view class="weui-cell__bd">
          <picker bindchange="bindstylesChange" value="{{stylesIndex}}" range="{{styles}}">
            <view class="weui-select weui-select_in-select-after">{{styles[stylesIndex]}}</view>
          </picker>
        </view>
      </view>
    </view>
    <view class="button-sp-area">
      <button class="weui-btn" type="warn" plain="true" bindtap='onLogout'>退出登陆</button>
    </view>
  </view>
</view>