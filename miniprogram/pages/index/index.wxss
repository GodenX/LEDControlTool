/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.page__bd {
    padding-bottom: 20px;
}

.page__title {
    text-align: center;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: center;
    font-size: 14px;
}

.imagesize {
  display: flex;
  justify-content: center;
  padding-top: 100rpx;
}

.imagesize image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 300rpx;
}

.button-sp-area{
    margin: 0 auto;
    padding-top: 30px;
    width: 100%;
}