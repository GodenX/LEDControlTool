<!--miniprogram/pages/logon/logon.wxml-->
<view class="page">
  <view class="weui-cells__title">填写注册信息</view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-cell__hd">
        <view class="weui-label">ID:</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" value="{{macAddr}}" placeholder="请输入设备ID码" />
      </view>
      <view class="weui-cell__ft">
        <image class="weui-vcode-img" src="../../images/QRCode.jpg" style="width: 50px" bindtap='onGetMACAddr'></image>
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">用户名:</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" value="{{username}}" placeholder="请输入用户名" />
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">密码:</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" value="{{password}}" placeholder="请输入密码" password='true' />
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">确认密码:</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" value="{{confirmPassword}}" placeholder="请输入密码" password='true' />
      </view>
    </view>
  </view>
  <view class="button-sp-area">
    <button class="weui-btn" type="primary" plain="true">注册</button>
  </view>
</view>